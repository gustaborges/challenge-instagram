{
  "name": "react-12",
  "version": "1.0.0",
  "description": "Desenvolver uma vers√£o **mobile first** do Instagram utilizando apenas **HTML5** e **CSS3**.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run prepare-all",
    "watch:scss": "onchange \"css/*.scss\" -- npm run scss",
    "scss": "node-sass -o css/ css/",
    "lite": "lite-server",
    "prepare-all": "parallelshell \"npm run watch:scss\" \"npm run lite\"",
    "clean": "rimraf dist",
    "copyimages": "mkdirp dist/img && ncp img dist/img && copyfiles *.png dist",
    "copyfonts": "copyfiles -f webfonts/* dist/webfonts",
    "usemin": "usemin index.html -d dist --htmlmin -o dist/index.html",
    "build": "npm run clean && npm run copyimages && npm run copyfonts && npm run usemin"
  },
  "author": "Gustavo Borges",
  "license": "ISC",
  "devDependencies": {
    "copyfiles": "^2.2.0",
    "cssmin": "^0.4.3",
    "htmlmin": "0.0.7",
    "lite-server": "^2.5.4",
    "mkdirp": "^1.0.4",
    "ncp": "^2.0.0",
    "node-sass": "^4.13.1",
    "onchange": "^6.1.0",
    "parallelshell": "^3.0.1",
    "rimraf": "^3.0.2",
    "usemin-cli": "^0.6.0"
  }
}
